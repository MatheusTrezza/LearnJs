<!doctype html>
<html>
    <head>
        <title>Logica de Programação Javascript</title>
        <meta charset="utf-8">
    </head>
    <body>
        <h1>Lógica de programação com Javascript</h1>
        
        
        <button onclick="mt()">Criar Tabuada</button>
        
        <button onclick="lt()">Limpar Tabuada</button>
        
        <div id="output"></div>
        
        <script>
            
            function mt(){
                var n1 = parseInt(prompt('Digite um numero: '));
                lt();
                
                var i = 1;
                while(i <=1000){
                    mensagem = mensagem + n1+ ' X ' + i + " = " + (n1*i) + '<br>';
                    i = i + 1;
                    
                }
                output.innerHTML = mensagem;
                
                
                
                }
            function lt(){
                mensagem = '';
                output.innerHTML = mensagem;
            }
                
        
            
            
            
            var output = document.querySelector("#output");
            
            var mensagem = ' ';
            

        </script>
        

        
        
        
        
        
    </body>
    
    
        
        
           
            
          
        
    
            
        
        
                 
                
             
            

            
        
        
        
